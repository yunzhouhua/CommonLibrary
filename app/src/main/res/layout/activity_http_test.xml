<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/get_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get 同步"/>

    <Button
        android:id="@+id/get_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get 异步" />

    <Button
        android:id="@+id/post_sync"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post 同步"/>

    <Button
        android:id="@+id/post_async"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="post 异步"/>

</LinearLayout>
